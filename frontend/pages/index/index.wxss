.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  box-sizing: border-box;
  padding: 60rpx 30rpx 40rpx;
  background-color: var(--background-color);
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
  text-align: center;
}

.subtitle {
  font-size: 32rpx;
  color: var(--light-text-color);
  text-align: center;
}

.card-container {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 40rpx;
  margin: 40rpx 0;
}

.card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: var(--card-color);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: white;
}

.tryon-icon-style {
  background-color: var(--primary-color);
}

.tryon-icon-style::before {
  content: "VT";
  font-size: 28rpx;
}

.transfer-icon-style {
  background-color: var(--accent-color);
}

.transfer-icon-style::before {
  content: "PT";
  font-size: 28rpx;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: var(--text-color);
}

.card-desc {
  font-size: 26rpx;
  color: var(--light-text-color);
  line-height: 1.4;
}

.card-arrow {
  font-size: 32rpx;
  color: var(--light-text-color);
  font-weight: bold;
  margin-left: 20rpx;
}

.footer {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: var(--light-text-color);
}

.nav-button {
  width: 80%;
  margin-bottom: 40rpx;
  padding: 25rpx 0;
  font-size: 32rpx;
  border-radius: 10rpx;
  background-color: #007aff;
  color: white;
}

.nav-button:last-child {
  margin-bottom: 0;
} 