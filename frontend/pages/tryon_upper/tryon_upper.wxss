/* frontend/pages/tryon/tryon.wxss */
.container {
    min-height: 100vh;
    background-color: var(--background-color);
    padding-bottom: 40rpx;
  }
  
  .page-header {
    padding: 40rpx 30rpx;
    background-color: var(--primary-color);
    color: white;
    border-bottom-left-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 30rpx;
  }
  
  .page-title {
    font-size: 44rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .page-desc {
    font-size: 28rpx;
    opacity: 0.9;
    display: block;
  }
  
  .main-content {
    padding: 0 30rpx;
  }
  
  .section {
    margin-bottom: 40rpx;
    background-color: var(--card-color);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    overflow: hidden;
  }
  
  .section-header {
    display: flex;
    align-items: center;
    padding: 24rpx 30rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  }
  
  .section-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background-color: var(--primary-color);
    color: white;
    font-weight: bold;
    font-size: 28rpx;
    margin-right: 20rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-color);
  }
  
  .upload-area {
    padding: 30rpx;
  }
  
  .image-placeholder {
    width: 100%;
    height: 360rpx;
    border: 2rpx dashed #ccc;
    border-radius: var(--border-radius);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--secondary-color);
    margin-bottom: 20rpx;
  }
  
  .placeholder-icon {
    font-size: 80rpx;
    color: var(--light-text-color);
    line-height: 1;
    margin-bottom: 20rpx;
  }
  
  .placeholder-text {
    font-size: 28rpx;
    color: var(--light-text-color);
  }
  
  .preview-image {
    width: 100%;
    height: 500rpx;
    border-radius: var(--border-radius);
    background-color: var(--secondary-color);
    margin-bottom: 20rpx;
  }
  
  .upload-buttons {
    display: flex;
    gap: 20rpx;
  }
  
  .upload-buttons button {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 16rpx 0;
  }
  
  .button-icon {
    margin-right: 8rpx;
  }
  
  .action-section {
    padding: 20rpx 30rpx 40rpx;
  }
  
  .primary-button {
    width: 100%;
    background-color: var(--primary-color);
    color: white;
    font-size: 32rpx;
    padding: 24rpx 0;
    border-radius: 50rpx;
    border: none;
    font-weight: 600;
    text-align: center;
    box-shadow: 0 6rpx 16rpx rgba(74, 111, 255, 0.3);
    transition: all 0.3s ease;
  }
  
  .primary-button.disabled {
    background-color: #CCCCCC;
    color: #888888;
    box-shadow: none;
  }
  
  .result-section {
    margin-top: 30rpx;
  }
  
  .result-image {
    width: 100%;
    height: 600rpx;
    border-radius: var(--border-radius);
    padding: 30rpx;
    box-sizing: border-box;
  }
  
  .result-actions {
    display: flex;
    padding: 0 30rpx 30rpx;
    gap: 20rpx;
  }
  
  .result-actions button {
    flex: 1;
  }
  
  .loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
  }
  
  .loading-content {
    background-color: white;
    border-radius: 16rpx;
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
    max-width: 600rpx;
  }
  
  .loading-spinner {
    width: 80rpx;
    height: 80rpx;
    border: 6rpx solid var(--secondary-color);
    border-top: 6rpx solid var(--primary-color);
    border-radius: 50%;
    margin-bottom: 30rpx;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .loading-text {
    font-size: 30rpx;
    color: var(--text-color);
    text-align: center;
  }
  
  .error-message {
    position: fixed;
    bottom: 40rpx;
    left: 30rpx;
    right: 30rpx;
    padding: 20rpx 30rpx;
    background-color: #ffebee;
    color: #c62828;
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    z-index: 900;
  }
  
  .close-error {
    font-size: 40rpx;
    padding: 0 10rpx;
  } 